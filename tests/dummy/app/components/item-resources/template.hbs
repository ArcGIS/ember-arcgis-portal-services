{{#if isLoading}}
<h3>Loading resources...</h3>
{{else}}
  <h3>Resources</h3>
  <table class="table table-striped">
    <thead>
      <th>Name</th>
      <th>Actions</th>
    </thead>
    <tbody>
      {{#each model.resources as |res|}}
      <tr>
        <td><a href="{{resourceBaseUrl}}{{res.resource}}" target="_blank">{{res.resource}}</a></td>
        <td><button type="button"  class="btn btn-danger" {{action "destroy" res}}> <span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{upload-button onChange=(action 'filesChanged')}}
  <div class="form-group">
    <label for="fileUrl">Url to Resource</label>
    {{input type=text value=urlToResource class="form-control" placeholder="Url to Resource"}}
  </div>
  <button class="btn btn-primay" {{action "sendText"}}>Send Fetch and Upload File</button>
  <pre><code>{{cssAsString}}</code></pre>

{{/if}}
