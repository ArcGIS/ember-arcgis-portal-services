<div class="row">
  <div class="col-sm-12">
    <h2>Groups {{link-to "New Group" "groups.new" class="btn btn-primary pull-right"}} </h2>
    <form class="form-inline">
      <div class="form-group">
        <label for="exampleInputName2">Query</label>
        {{input class="form-control" value=query}}
      </div>
      <div class="form-group">
        <label for="exampleInputName2">Start</label>
        {{input class="form-control" value=start}}
      </div>
      <div class="form-group">
        <label for="exampleInputName2">Num</label>
        {{input class="form-control" value=num}}
      </div>
      <button type="button" class="btn btn-default" {{action "search" query}}>Search</button>
    </form>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
  {{#if hasResults}}

    <table class="table table-striped">
      <thead>
        <th>Title</th>
        <th>Access</th>
        <th>Owner</th>
        <th>Actions</th>
      </thead>
      <tbody>
        {{#each filtered.results as |group|}}
        <tr>
          <td>{{link-to group.title 'groups.group' group}}</td>
          <td>{{group.access}}</td>
          <td>{{group.owner}}</td>
          <td>
            <a href="{{agoGroupsBaseUrl}}?id={{group.id}}" target="_blank" class="btn btn-default"><span class="glyphicon glyphicon-share"></span></a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <div class="alert alert-warning">No items found for query {{q}}.</div>
  {{/if}}
  </div>
</div>
{{log filtered}}
