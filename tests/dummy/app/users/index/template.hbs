<div class="row">
  <div class="col-sm-12">
    <h2>User Search</h2>
    {{!-- {{item-search-form onFilter=(action 'filter')
      owner=owner
      tags=tags
      type=type
      typeKeywords=typeKeywords
      query=query}} --}}
      <form class="form-inline" {{action 'filter' portalHostnameCopy tokenCopy on="submit"}}>
        <div class="form-group">
          <label>Portal Host Name: </label>
          {{input class="form-control" value=portalHostnameCopy}}
        </div>
        <div class="form-group">
          <label>Token: </label>
          {{input class="form-control" value=tokenCopy}}
        </div>
        <button class="btn btn-primary" type="submit">
          <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
        </button>
      </form>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    {{#if totalCount}}
      <h4>Found {{totalCount}} Items; searched for {{q}}</h4>
      <table class="table table-striped">
        <thead>
          <th>Full Name</th>
          <th>Email</th>
        </thead>
        <tbody>
          {{#each model.users as |item|}}
          <tr>
            <td>{{#link-to 'users.user' item.username}}{{item.fullName}}{{/link-to}}</td>
            <td>{{item.email}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      {{list-pager model=model}}
    {{else}}
    <div class="alert alert-warning">No items found for query {{q}}.</div>
    {{/if}}
  </div>
</div>
