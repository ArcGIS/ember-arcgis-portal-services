<div class="row">
  <div class="col-sm-12">
    <h2>Item Search {{#link-to 'items.new' class="btn btn-warning btn-lrg pull-right"}}New Item{{/link-to}}</h2>
    <form class="form-inline">
      <div class="form-group">
        <label for="exampleInputName2">Query</label>
        {{input class="form-control" value=query}}
      </div>
      <div class="form-group">
        <label for="exampleInputName2">Start</label>
        {{input class="form-control" value=start}}
      </div>
      <div class="form-group">
        <label for="exampleInputName2">Num</label>
        {{input class="form-control" value=num}}
      </div>
      <button type="button" class="btn btn-default" {{action "search" query}}>Search</button>
    </form>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    {{#if hasResults}}
      <table class="table table-striped">
        <thead>
          <th>Title</th>
          <th>Access</th>
          <th>Owner</th>
          <th>Type</th>
          <th>Actions</th>
        </thead>
        <tbody>
          {{#each filtered.results as |item|}}
          <tr>
            <td>{{#link-to 'items.item.index' item}}{{item.title}}{{/link-to}}</td>
            <td>{{item.access}}</td>
            <td>{{item.owner}}</td>
            <td>{{item.type}}</td>
            <td>
              {{#link-to 'items.item.edit' item  class="btn btn-default" }}<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>{{/link-to}}
              <button type="button"  class="btn btn-default" {{action "destroy" item}}> <span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    {{else}}
    <div class="alert alert-warning">No items found for query {{q}}.</div>
    {{/if}}
  </div>
</div>
